@ECHO OFF
SETLOCAL ENABLEDELAYEDEXPANSION

SET /P DIRPATH=SPECIFY THE DIRECTORY PATH: 
SET TEMPFILE=%CD%\FILELIST.TXT
GOTO RENAME

:RENAME
DIR %DIRPATH% /O:N /B > CON
DIR %DIRPATH% /O:N /B > %TEMPFILE%
ECHO.
SET /P REMOVE=INDICATE THE STRING TO REPLACE: 
SET /P REPLACE=INDICATE THE STRING TO CHANGE TO: 
ECHO GOING TO CHANGE %REMOVE% TO %REPLACE%
FOR /F "TOKENS=*" %%A IN (%TEMPFILE%) DO (
	SET FILENAME=%DIRPATH%\"%%A"
	ECHO CURRRENT FILE: !FILENAME!
	SET NEWFILENAME=!FILENAME:%REMOVE%=%REPLACE%!
	ECHO AFTER RENAME: !NEWFILENAME!
	MOVE !FILENAME! !NEWFILENAME!
	ECHO.
)

SET /P CHECK=RENAME AGAIN?[Y/N]
IF /I [!CHECK!] EQU [Y] (
	GOTO RENAME
) ELSE (
	ECHO.
	GOTO END
)

:END
DEL %TEMPFILE%
ECHO RENAME COMPLETE!