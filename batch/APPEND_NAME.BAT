@ECHO OFF
SETLOCAL ENABLEDELAYEDEXPANSION

SET /P DIRPATH=SPECIFY THE DIRECTORY PATH: 
SET TEMPFILE=%CD%\FILELIST.TXT
GOTO RENAME

:RENAME
DIR %DIRPATH% /O:N /B > CON
DIR %DIRPATH% /O:N /B > %TEMPFILE%
ECHO.
SET /P APPEND=INDICATE THE STRING TO APPEND: 
ECHO GOING TO APPEND %APPEND% TO FILE NAME
FOR /F "TOKENS=*" %%A IN (%TEMPFILE%) DO (
	SET FILENAME=%%A
	ECHO CURRRENT FILE: !FILENAME!
	SET NEWFILENAME=%APPEND%!FILENAME!
	ECHO NEW FILE NAME: !NEWFILENAME!
	MOVE %DIRPATH%\!FILENAME! %DIRPATH%\!NEWFILENAME!
	ECHO.
)

:END
DEL %TEMPFILE%
ECHO APPEND COMPLETE!