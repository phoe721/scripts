@ECHO OFF
SETLOCAL ENABLEDELAYEDEXPANSION

REM Video Codec: libx264
REM Video Bitrate: 8M

SET /P DIRPATH=SPECIFY THE DIRECTORY PATH:
SET /P DVD_NUM=SPECIFY DVD NUMBER:
SET /P NEWFILE=SPECIFY NAME OF THE FILE:
SET /P VIDEO_CODEC=SPECIFY VIDEO CODEC:
SET /P VIDEO_BITRATE=SPECIFY VIDEO_BITRATE TO CONVERT:
SET FILENAMES=
FOR /F "TOKENS=*" %%A IN ('DIR /B %DIRPATH%\*%DVD_NUM%*.vob') DO (
	SET FILENAME=%DIRPATH%\%%A
	ECHO CURRRENT FILE: !FILENAME!
	IF [!FILENAMES!] NEQ [] (
		SET FILENAMES=!FILENAMES!^|!FILENAME!
	) ELSE (
		SET FILENAMES=!FILENAME!
	)
	ECHO CONCAT FILENAMES: !FILENAMES!
)

ECHO CONVERTING NOW...
FFMPEG -i "concat:!FILENAMES!" -vcodec %VIDEO_CODEC% -b:v %VIDEO_BITRATE% !NEWFILE!